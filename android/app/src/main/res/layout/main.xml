<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="helloworld"
                android:text="helloworld"/>

            <Button
                android:id="@+id/blankdemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="blankdemo"
                android:text="state/props demo"/>

            <Button
                android:id="@+id/flexlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="flexlayout"
                android:text="flexlayout demo"/>

            <Button
                android:id="@+id/hotupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hotupdate"
                android:text="hotupdate demo"/>
            <Button
                android:id="@+id/hotreloading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hotreloading"
                android:text="hotreloading demo"/>

            <Button
                android:id="@+id/extensiondemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="extensiondemo"
                android:text=" extension demo"/>

        </LinearLayout>


    </ScrollView>
</LinearLayout>